<!-- views/stream.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sports Stream</title>
    <style>
        body, html {
            margin: 0;
            padding: 0;
            width: 100%;
            height: 100%;
            overflow: hidden;
        }
        .stream-container {
            position: relative;
            width: 100vw;
            height: 100vh;
            max-width: 100%;
            margin: 0 auto;
        }
        iframe {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
    </style>
</head>
<body>
    <div class="stream-container">
        <iframe 
            src="<%= streamUrl %>"
            sandbox="allow-forms allow-pointer-lock allow-same-origin allow-scripts allow-top-navigation"
            frameborder="0"
            gesture="media"
            allow="encrypted-media"
            allowfullscreen>
        </iframe>
    </div>
</body>
</html>